/* Variables */
$white-color = #fff
$black-color = #000
$zero = 0
$none = none

uppercase(text-transform = uppercase)
  text-transform uppercase

font(size, line = 1.5em, font = 'Abel-Rugular')
  font-size size
  line-height line
  font-family font

skills-function(width = 130px, height = 100px, size = contain,
                repeat = no-repeat)
  width width
  height height
  background-size size
  background-repeat repeat

social-function()
  skills-function( 100%, 100px )
  background-size 50px 60px
  background-position top center