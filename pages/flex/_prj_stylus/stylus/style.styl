@import "import-fonts.styl"
@import "general.styl"

header
  nav
    background-color #1d2126
    div.container
      display flex
      padding 30px
      align-items center
      flex-flow row nowrap
      justify-content space-between
      div.logo
        flex-grow 3
        width 99px
        height 19px
        background url("../images/modest-logo.png") no-repeat left center
      ul.nav
        flex-grow 2
        display flex
        flex-flow row nowrap
        justify-content space-around
        @media (max-width: 720px)
          flex-grow 1
          align-items center
          flex-flow column wrap
        li
          padding 5px
          color #a4aead
          list-style $none
          border-radius 4px
          border 2px solid transparent
          &:hover
            border-color #a4aead
          &:first-child
            color $turquoise
            border 2px solid $turquoise
          a
            uppercase()
            font 14px 'OpenSans-SemiBold'
  div.app
    background url("../images/bg-header.png") no-repeat center
    background-size cover
    div.container
      padding 220px 30px
      @media (max-width 615px)
        padding 205px 30px
      div.app-info
        height 200px
        display flex
        flex-flow column wrap
        justify-content space-between
        @media (max-width 615px)
          height 250px
        button
          flex $none
          &.green:hover
            button-decorate(#c1c3c9, transparent)
            border 2px solid $white-color
          &.transparent:hover
            button-decorate($white-color, $turquoise)
            border 2px solid $turquoise
        h2
          color $white-color
        p
          color #bfc2ca

div
  &.about-us
    div.container:only-child
      flex-flow column wrap
      padding 80px 30px 100px
      h2
        margin-bottom 70px
        color $dark-blue-color
        &:before
          vertical-align middle
          content url("../images/border-left-light.png")
      div.container
        padding 0
        flex-flow row nowrap
        @media (max-width 900px)
          flex-direction column-reverse
        div
          &.item1
            margin-right 20px
            color $gray-color
            flex-basis 1590px
            flex-direction column
            @media (max-width 900px)
              flex-basis auto
            p
              margin-bottom 30px
              span
                font-family 'QuattrocentoSans-Bold', sans-serif
            div.social
              a
                padding 15px
                color $white-color
                font 46px 'Socialico'
                background-color #d0d5d9
          &.item2
            flex-flow column nowrap
            justify-content space-evenly
            div.feature-item
              display flex
              align-items flex-start
              span
                flex $none
                padding 15px
                color $white-color
                background-color $turquoise
                font 20px 'QuattrocentoSans-Regular'
              div
                flex auto
                padding-left 20px
                p
                  color $gray-color
                  margin-bottom 30px
                h3
                  uppercase()
                  margin-bottom 10px
                  color $dark-blue-color
                  font 18px 'QuattrocentoSans-Bold'
  &.team
    div.container:only-child
      flex-flow column wrap
      padding 80px 30px 100px
      h2
        margin-bottom 70px
        color $dark-blue-color
        &:before
          vertical-align middle
          content url("../images/border-left-light.png")
      div.container
        padding 0
        div.team-gallery
          display flex
          flex-flow row nowrap
          justify-content space-evenly
          @media (max-width 1170px)
            flex-wrap wrap
          div.team-gallery-item
            margin 7px
            position relative
            &:hover
              cursor pointer
              figcaption
                background-color #3a454d
                h3, p
                  color #d7d8d9
              .social
                display block
            figure
              img
                padding 0
              figcaption
                padding 20px
                margin-top -4px
                background-color #e1e6ea
                h3
                  uppercase()
                  color $dark-blue-color
                  font 16px 'QuattrocentoSans-Bold'
                p
                  color $gray-color
                  font 14px 'OpenSans-Regular'
            div.social
              display $none
              margin 50% 20%
              position absolute
              a
                padding 15px
                color $white-color
                font 28px 'Socialico'
                background-color #3a454d